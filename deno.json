{
  "nodeModulesDir": true,
  "imports": {
    "std/": "https://deno.land/std@0.189.0/",
    "dnt": "https://deno.land/x/dnt@0.36.0/mod.ts",
    "cliffy/": "https://deno.land/x/cliffy@v0.25.7/",
    "dots-wrapper": "./node_modules/dots-wrapper/src/index.ts"
  },
  "lint": {
    "include": ["src/"],
    "exclude": []
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": []
  },
  "tasks": {
    "generate:component-schema": "deno run --allow-all ./bin/scripts/component-generator.ts",
    "generate:datacenter-schema": "deno run --allow-all ./bin/scripts/datacenter-generator.ts",
    "generate:environment-schema": "deno run --allow-all ./bin/scripts/environment-generator.ts",
    "generate:providers": "deno run --allow-all ./bin/scripts/provider-generator.ts",
    "generate:resources": "deno run --allow-all ./bin/scripts/resource-generator.ts"
  }
}