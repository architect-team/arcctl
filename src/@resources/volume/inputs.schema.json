{
  "$ref": "#/definitions/VolumeInputs",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "VolumeInputs": {
      "additionalProperties": false,
      "properties": {
        "hostPath": {
          "description": "Path on the host machine to mount the volume to",
          "examples": [
            "/Users/batman/my-volume"
          ],
          "type": "string"
        },
        "name": {
          "description": "Name to give to the volume resource",
          "examples": [
            "my-volume"
          ],
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    }
  },
  "$id": "https://architect.io/.schemas/resources/volume/inputs.json"
}