{
  "$ref": "#/definitions/ServiceOutputs",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "ServiceOutputs": {
      "additionalProperties": false,
      "properties": {
        "host": {
          "description": "Host the service listens on",
          "examples": [
            "my-service"
          ],
          "type": "string"
        },
        "name": {
          "description": "Name of the service",
          "examples": [
            "my-service"
          ],
          "type": "string"
        },
        "port": {
          "description": "Port the service listens on",
          "examples": [
            80
          ],
          "type": [
            "number",
            "string"
          ]
        },
        "protocol": {
          "description": "Protocol the service listens on",
          "examples": [
            "http"
          ],
          "type": "string"
        },
        "target_port": {
          "description": "The port the service forwards traffic to",
          "examples": [
            8080
          ],
          "type": [
            "number",
            "string"
          ]
        },
        "url": {
          "description": "Fully resolvable URL of the service",
          "examples": [
            "http://my-service:80"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "target_port",
        "protocol",
        "host",
        "port",
        "url"
      ],
      "type": "object"
    }
  },
  "$id": "https://architect.io/.schemas/resources/service/outputs.json"
}