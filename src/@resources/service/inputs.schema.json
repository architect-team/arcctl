{
  "$ref": "#/definitions/ServiceInputs",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ServiceInputs": {
      "additionalProperties": false,
      "properties": {
        "external_hostname": {
          "description": "External hostname to point to instead of an internal deployment",
          "type": "string"
        },
        "hostname": {
          "description": "Hostname the service should listen on",
          "type": "string"
        },
        "labels": {
          "additionalProperties": {
            "type": "string"
          },
          "description": "Additional labels to attach to the resource",
          "type": "object"
        },
        "namespace": {
          "description": "Namespace to put the resource in",
          "type": "string"
        },
        "port": {
          "description": "A port the service should listen on. Providers will generate one by default.",
          "type": "number"
        },
        "target_deployment": {
          "description": "Name/selector of the replicas",
          "type": "string"
        },
        "target_port": {
          "description": "Port to forward traffic to",
          "type": "number"
        },
        "target_protocol": {
          "description": "Protocol the service responds to",
          "type": "string"
        }
      },
      "required": [
        "hostname",
        "target_deployment",
        "target_port",
        "target_protocol"
      ],
      "type": "object"
    }
  }
}