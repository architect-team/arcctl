{
  "$ref": "#/definitions/DatabaseInputs",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "DatabaseInputs": {
      "additionalProperties": false,
      "properties": {
        "databaseType": {
          "description": "Type of database required by the schema",
          "examples": [
            "postgres"
          ],
          "type": "string"
        },
        "databaseVersion": {
          "description": "Version of the database type the schema creation process expects",
          "examples": [
            15
          ],
          "type": "string"
        },
        "name": {
          "description": "Name to give to the new schema",
          "examples": [
            "my-schema"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "databaseType",
        "databaseVersion"
      ],
      "type": "object"
    }
  },
  "$id": "https://architect.io/.schemas/resources/database/inputs.json"
}